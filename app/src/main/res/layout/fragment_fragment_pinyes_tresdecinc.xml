<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="layout.fragment_pinyes_tresdecinc"
    android:background="@color/blanc">

    <!-- TODO: Update blank fragment layout -->

    <android.support.constraint.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="428dp"
        android:layout_height="203dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/listview"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/Baix_arriba"
            android:layout_width="@dimen/width_pinya_button"
            android:layout_height="@dimen/heigth_pinya_button"
            android:layout_marginStart="176dp"
            android:layout_marginTop="24dp"
            android:text="@string/baix"
            android:textAlignment="center"
            android:textSize="@dimen/size_buton_pinya"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/Baix_derecha"
            android:layout_width="@dimen/width_pinya_button"
            android:layout_height="@dimen/heigth_pinya_button"
            android:layout_marginStart="222dp"
            android:layout_marginTop="25dp"
            android:rotation="-55"
            android:text="@string/baix"
            android:textAlignment="center"
            android:textSize="@dimen/size_buton_pinya"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Agulla_arriba" />

        <Button
            android:id="@+id/Baix_izquierda"
            android:layout_width="@dimen/width_pinya_button"
            android:layout_height="@dimen/heigth_pinya_button"
            android:layout_marginStart="132dp"
            android:layout_marginTop="27dp"
            android:rotation="55"
            android:text="@string/baix"
            android:textAlignment="center"
            android:textSize="@dimen/size_buton_pinya"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Agulla_arriba" />

        <Button
            android:id="@+id/Agulla_arriba"
            android:layout_width="@dimen/width_pinya_button"
            android:layout_height="@dimen/heigth_pinya_button"
            android:layout_marginBottom="120dp"
            android:layout_marginStart="176dp"
            android:text="@string/agulla"
            android:textAlignment="center"
            android:textSize="@dimen/size_buton_pinya"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/Agulla_derecha"
            android:layout_width="68dp"
            android:layout_height="31dp"
            android:layout_marginTop="12dp"
            android:rotation="-55"
            android:text="@string/agulla"
            android:textAlignment="center"
            android:textSize="@dimen/size_buton_pinya"
            app:layout_constraintStart_toEndOf="@+id/Baix_izquierda"
            app:layout_constraintTop_toBottomOf="@+id/Agulla_arriba" />

        <Button
            android:id="@+id/Agulla_izquierda"
            android:layout_width="@dimen/width_pinya_button"
            android:layout_height="@dimen/heigth_pinya_button"
            android:layout_marginStart="152dp"
            android:layout_marginTop="12dp"
            android:rotation="55"
            android:text="@string/agulla"
            android:textAlignment="center"
            android:textSize="@dimen/size_buton_pinya"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Agulla_arriba" />

        <Button
            android:id="@+id/Crosa_dreta_arriba"
            android:layout_width="48dp"
            android:layout_height="27dp"
            android:layout_marginBottom="32dp"
            android:layout_marginStart="259dp"
            android:rotation="35"
            android:text="@string/crossa"
            android:textAlignment="center"
            android:textSize="6dp"
            app:layout_constraintBottom_toBottomOf="@+id/Baix_derecha"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/Crosa_izquierda_arriba"
            android:layout_width="48dp"
            android:layout_height="27dp"
            android:layout_marginBottom="35dp"
            android:layout_marginStart="118dp"
            android:rotation="-35"
            android:text="@string/crossa"
            android:textAlignment="center"
            android:textSize="6dp"
            app:layout_constraintBottom_toBottomOf="@+id/Baix_izquierda"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/Crosa_izquierda_abajo"
            android:layout_width="48dp"
            android:layout_height="27dp"
            android:layout_marginStart="167dp"
            android:layout_marginTop="2dp"
            android:rotation="-35"
            android:text="@string/crossa"
            android:textAlignment="center"
            android:textSize="6dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Baix_izquierda" />

        <Button
            android:id="@+id/Crosa_dreta_abajo"
            android:layout_width="48dp"
            android:layout_height="27dp"
            android:layout_marginStart="205dp"
            android:layout_marginTop="33dp"
            android:rotation="35"
            android:text="@string/crossa"
            android:textAlignment="center"
            android:textSize="6dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Crosa_dreta_arriba" />

        <Button
            android:id="@+id/Crosa_arriba_izquierda"
            android:layout_width="48dp"
            android:layout_height="27dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:rotation="-90"
            android:text="@string/crossa"
            android:textAlignment="center"
            android:textSize="6dp"
            app:layout_constraintBottom_toBottomOf="@+id/Baix_arriba"
            app:layout_constraintEnd_toEndOf="@+id/Baix_arriba"
            app:layout_constraintHorizontal_bias="0.761"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/Crosa_arriba_derecha"
            android:layout_width="48dp"
            android:layout_height="27dp"
            android:layout_marginBottom="28dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="228dp"
            android:rotation="-90"
            android:text="@string/crossa"
            android:textAlignment="center"
            android:textSize="6dp"
            app:layout_constraintBottom_toBottomOf="@+id/Agulla_arriba"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent" />

    </android.support.constraint.ConstraintLayout>

    <ListView
        android:id="@+id/listview"
        android:layout_width="126dp"
        android:layout_height="511dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/floatGuardar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:foregroundGravity="bottom"
        android:src="@drawable/ic_action_save"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

</android.support.constraint.ConstraintLayout>
